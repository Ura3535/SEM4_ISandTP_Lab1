@model IEnumerable<PostOfficeDomain.Model.Parcel>

@{
    ViewData["Title"] = "Index";
}

<h1>Мої посилки</h1>

<table class="table">
    <thead>
        <tr>
            <th class="col-sm-2">
                Номер накладної
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeparturePoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentLocation.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryPoints.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeparturePoints.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Status)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Детально</a>
            </td>
        </tr>
}
    </tbody>
</table>
