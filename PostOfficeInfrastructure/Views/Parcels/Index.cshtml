@model IEnumerable<PostOfficeDomain.Model.Parcel>

@{
    ViewData["Title"] = "Index";
}

<h1>Мої Посилки</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeparturePoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentLocation.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryPoints.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeparturePoints.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
